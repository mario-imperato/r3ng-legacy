<action path="/org/r3/shkadmin/home"
    className="org.r3.system.struts.GWFActionMapping"            
    type="org.r3.system.struts.R3Manager"
    parameter="home" >

    <!--
    scope="request"
    name="loginForm"
    validate="true"
    input="/security/signin.jsp">-->
       <set-property property="sessionBehaviour"   value="required"     />
       <set-property property="functionId"         value="fnshkadmin"      />    
       <set-property property="functionalAreaId"   value="home"         />           
       <set-property property="enforceTimeToken"   value="false"        />           
              
       <set-property property="authorizationRequiredFailureForward"  value="SessionRequiredFailure"  />
              
       <forward name="ShakeusHome"            path="/org/r3/shkadmin/home/shakeus/home.jsp"            redirect="false" />
       <forward name="ShakeusNeighbHome"      path="/org/r3/shkadmin/home/shakeusneighb/home.jsp"      redirect="false" />          
       <forward name="ShakeusShopHome"        path="/org/r3/shkadmin/home/shakeusshop/home.jsp"        redirect="false" />
</action>

